<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/movieTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:singleLine="true"
            android:textSize="30sp"
            android:fontFamily="@font/alegreya_sans_regular"
            android:textColor="@color/blue"
            android:textColorHint="@color/blue"
            android:hint="Movie Title" />

        <EditText
            android:id="@+id/Publisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:singleLine="true"
            android:textSize="30sp"
            android:fontFamily="@font/alegreya_sans_regular"
            android:textColor="@color/blue"
            android:textColorHint="@color/blue"
            android:hint="Author" />

        <EditText
            android:id="@+id/DateReleased"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:singleLine="true"
            android:textSize="30sp"
            android:fontFamily="@font/alegreya_sans_regular"
            android:textColor="@color/blue"
            android:textColorHint="@color/blue"
            android:hint="Date" />

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:fontFamily="@font/alegreya_sans_regular"
                android:textColor="@color/blue"
                android:textSize="30sp"
                android:layout_marginTop="16dp" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                android:rating="0"
                android:layout_marginTop="5dp" />

        </LinearLayout>

        <EditText
            android:id="@+id/movieParagraphReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:singleLine="true"
            android:textSize="30sp"
            android:fontFamily="@font/alegreya_sans_regular"
            android:textColor="@color/blue"
            android:textColorHint="@color/blue"
            android:inputType="textMultiLine"
            android:hint="Write Your Review Here..." />

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add picture "
                android:fontFamily="@font/alegreya_sans_regular"
                android:textColor="@color/blue"
                android:textSize="30sp"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <Button
                    android:id="@+id/ImportPicture"
                    android:background="@drawable/teal_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/alegreya_sans_regular"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:text="Import"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/TakeNewPicture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/teal_card"
                    android:fontFamily="@font/alegreya_sans_regular"
                    android:text="Take New"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>